{
  "name": "fiap-tech-hackathon-backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "prepare:build": "ts-patch install -s",
    "build": "npm run prepare:build && tsc",
    "start:prod": "npx prisma migrate deploy --schema=src/infrastructure/persistence/database/schema.prisma && node -r tsconfig-paths/register dist/src/bootstrap/server.js",
    "start:dev": "ts-node -r tsconfig-paths/register src/bootstrap/server.ts",
    "prisma:generate-migrations": "npx prisma migrate dev",
    "prisma:seed": "ts-node src/infrastructure/persistence/database/seeds/seeds.ts",
    "prisma:apply-migrations": "npx prisma migrate deploy",
    "prisma:generate-erd": "npx prisma generate",
    "prisma:format": "npx prisma format",
    "prisma:studio": "npx prisma studio",
    "format:code": "prettier --write && npx prisma format",
    "lint": "npx eslint . --fix",
    "lint:check": "npx eslint .",
    "precommit": "lint-staged && npm run lint",
    "prepush": "npm run test",
    "prepare": "is-ci || husky install",
    "test": "jest --detectOpenHandles --forceExit --runInBand",
    "test:cache": "jest --clearCache",
    "test:verbose": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:omit-stack": "jest --passWithNoTests --silent --noStackTrace",
    "test:staged": "npm test --findRelatedTests",
    "test:ci": "jest --coverage --passWithNoTests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/cors": "^2.8.17",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/lint-staged": "^13.3.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.12.12",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "commitizen": "^4.3.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-helpers": "^2.0.1",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "prisma": "^5.14.0",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "ts-patch": "^3.3.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0",
    "typescript-transform-paths": "^3.5.5"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.744.0",
    "@aws-sdk/client-s3": "^3.734.0",
    "@aws-sdk/client-sqs": "^3.699.0",
    "@aws-sdk/credential-providers": "^3.734.0",
    "@aws-sdk/s3-request-presigner": "^3.735.0",
    "@prisma/client": "^5.14.0",
    "axios": "^1.8.3",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "helmet": "^8.0.0",
    "husky": "^9.0.11",
    "is-ci": "^4.1.0",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.10",
    "swagger-ui-express": "^5.0.0",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "lint-staged": {
    "*.{js,ts}": ["eslint --fix", "prettier --write"]
  },
  "commitizen": {
    "path": "./node_modules/cz-conventional-changelog"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
